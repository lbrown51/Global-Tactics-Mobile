<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/five_dp"
    android:id="@+id/llOurSuccessesList"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/OurSuccessCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/five_dp"
        app:cardElevation="@dimen/five_dp"
        android:layout_marginHorizontal="@dimen/ten_dp"
        app:cardUseCompatPadding="false"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:strokeWidth="1dp"
        app:strokeColor="@color/colorPrimary">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llOurSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivOurSuccessFlag"
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_twenty_dp"
                android:paddingTop="@dimen/fifteen_dp"
                app:layout_constraintBottom_toTopOf="@+id/tvOurSuccessTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvOurSuccessTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/twenty_sp"
                android:padding="@dimen/ten_dp"
                app:layout_constraintBottom_toTopOf="@+id/tvOurSuccessDescription"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextAppearance.MaterialComponents.Headline4"/>

            <TextView
                android:id="@+id/tvOurSuccessDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fifteen_sp"
                android:paddingVertical="@dimen/fifteen_dp"
                android:paddingHorizontal="@dimen/twenty_dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextAppearance.MaterialComponents.Body1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>