<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/five_dp"
    android:id="@+id/llOurSuccessesList"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/OurSuccessCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/five_dp"
        app:cardElevation="@dimen/five_dp"
        android:layout_marginHorizontal="@dimen/ten_dp"
        app:cardUseCompatPadding="false"
        android:theme="@style/Theme.MaterialComponents.Light">

        <ImageView
            android:id="@+id/ivOurSuccessBackground"
            android:alpha="0.1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/llOurSuccess"
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_eighty_dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivOurSuccessFlag"
                android:layout_width="@dimen/one_twenty_dp"
                android:layout_height="@dimen/sixty_dp"
                android:maxHeight="@dimen/one_twenty_dp"
                android:layout_marginEnd="@dimen/ten_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginStart="@dimen/five_dp"/>

            <TextView
                android:id="@+id/tvOurSuccessTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_dp"
                android:layout_marginBottom="@dimen/fifteen_dp"
                android:gravity="center"
                android:textSize="@dimen/twenty_two_sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvOurSuccessDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/five_dp"
                android:paddingBottom="@dimen/five_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:textSize="@dimen/fifteen_sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>